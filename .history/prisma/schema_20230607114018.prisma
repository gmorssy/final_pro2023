generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @unique @default(autoincrement())
  email    String @unique
  username String @unique
  salt     String @unique
  hash     String @unique
  session  String @unique
  cart     String
}

model Game {
  id          Int    @id @unique @default(autoincrement())
  title       String @unique
  subtitle    String @unique
  description String @unique
  image       String @unique
  button      String @unique
}

model Forums {
  id          Int    @id @unique @default(autoincrement())
  title       String @unique
  game        String @unique
  date        String @unique
  description String @unique
}

model Chat {
  id       Int       @id @unique @default(autoincrement())
  name     String    @unique
  messages Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  authorId  Int?
  chatId    Int?
  content   String
  timestamp DateTime @default(now())
  own       Boolean?
  liked     Boolean?
  chat      Chat?    @relation(fields: [chatId], references: [id])
}
